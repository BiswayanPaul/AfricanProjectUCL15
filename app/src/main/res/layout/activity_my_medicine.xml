<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.user.thenewavaafrican2015.MyMedicine"
    android:background="@drawable/woodbckmain">

    TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="My Dosage"
        android:id="@+id/mydosagebutton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="37dp"
        android:layout_marginStart="37dp"
        android:layout_marginBottom="207dp" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Alerts"
        android:id="@+id/alertsbutton"
        android:layout_alignTop="@+id/mydosagebutton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="40dp" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Progress"
        android:id="@+id/progressbutton"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/alertsbutton"
        android:layout_alignLeft="@+id/mydosagebutton"
        android:layout_alignStart="@+id/mydosagebutton" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="History"
        android:id="@+id/historybutton"
        android:layout_alignTop="@+id/progressbutton"
        android:layout_alignLeft="@+id/alertsbutton"
        android:layout_alignStart="@+id/alertsbutton" />
</RelativeLayout>
