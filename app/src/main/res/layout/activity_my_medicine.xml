<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.user.thenewavaafrican2015.MyMedicine"
    android:background="@drawable/woodbckmain">

    TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:id="@+id/mydosagebutton"
        android:layout_marginBottom="208dp"
        android:background="@drawable/my_dosage_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:text=" "
        android:id="@+id/alertsbutton"
        android:background="@drawable/my_alerts_button"
        android:layout_alignTop="@+id/mydosagebutton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:id="@+id/progressbutton"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/alertsbutton"
        android:layout_alignLeft="@+id/mydosagebutton"
        android:layout_alignStart="@+id/mydosagebutton"
        android:background="@drawable/my_progress_button" />

    <Button
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:id="@+id/historybutton"
        android:layout_alignTop="@+id/progressbutton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/my_history_button" />
</RelativeLayout>
