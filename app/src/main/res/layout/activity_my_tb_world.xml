<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.user.thenewavaafrican2015.MyTBWorld">

    <Button
        android:layout_width="170dp"
        android:layout_height="250dp"
        android:id="@+id/whatisbutton"
        android:background="@drawable/my_what_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="170dp"
        android:layout_height="275dp"
        android:id="@+id/gethelpbutton"
        android:background="@drawable/my_helpsos_button"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/whatisbutton"
        android:layout_toEndOf="@+id/whatisbutton" />

    <Button
        android:layout_width="170dp"
        android:layout_height="240dp"
        android:id="@+id/managebutton"
        android:background="@drawable/my_manage_button"
        android:layout_below="@+id/whatisbutton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="170dp"
        android:layout_height="205dp"
        android:id="@+id/preventbutton"
        android:background="@drawable/my_prevent_button"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/managebutton"
        android:layout_toEndOf="@+id/managebutton" />
</RelativeLayout>
